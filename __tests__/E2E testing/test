describe('User Authentication', () => {
  it('logs in the user and redirects to the dashboard', () => {
    cy.visit('/login'); // Navigate to the login page
    cy.get('input[name="email"]').type('testuser@example.com'); // Enter email
    cy.get('input[name="password"]').type('password123'); // Enter password
    cy.get('button[type="submit"]').click(); // Submit form

    // Assert that the user is redirected to the dashboard
    cy.url().should('include', '/dashboard');
    cy.contains('Welcome to PathfinderX'); // Verify the dashboard greeting
  });
});
